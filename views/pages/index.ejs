    <script>
        // Function to check for updates using WebSocket
        function checkForUpdates() {
            // Create a WebSocket connection
            const socket = new WebSocket('wss://' + window.location.host + '/check-for-updates');

            // Handle messages from the server
            socket.addEventListener('message', (event) => {
                const data = JSON.parse(event.data);

                // Check if the file is updated
                if (data.updated) {
                    // Show the audio section when TTS is active
                    const audioSection = document.getElementById('audioSection');
                    if (audioSection) {
                        audioSection.style.display = 'block';
                    }

                    // Reload the audio source with a new timestamp to avoid caching
                    const audioElement = document.getElementById('audioPlayer');
                    const audioSource = document.getElementById('audioSource');

                    if (audioElement && audioSource) {
                        audioSource.src = '/public/file.mp3?' + new Date().getTime();
                    }

                    // Load and play the updated audio
                    audioElement.load();
                    audioElement.play();
                }
            });

            // Handle WebSocket errors
            socket.addEventListener('error', (error) => {
                console.error('WebSocket error:', error);
            });
        }

        // Auto-chat control functions
        async function fetchAutoChatStatus() {
            try {
                const response = await fetch('/api/auto-chat/status');
                const status = await response.json();

                // Update toggle
                const toggle = document.getElementById('autoChatToggle');
                if (toggle) {
                    toggle.checked = status.enabled;
                }

                // Update stats
                const messageCount = document.getElementById('messageCount');
                const lastResponse = document.getElementById('lastResponse');

                if (messageCount) {
                    messageCount.textContent = `${status.messages_since_last} messages since last response`;
                }

                if (lastResponse && status.seconds_since_last !== null) {
                    if (status.seconds_since_last < 60) {
                        lastResponse.textContent = `${status.seconds_since_last}s ago`;
                    } else if (status.seconds_since_last < 3600) {
                        lastResponse.textContent = `${Math.floor(status.seconds_since_last / 60)}m ago`;
                    } else {
                        lastResponse.textContent = `${Math.floor(status.seconds_since_last / 3600)}h ago`;
                    }
                } else if (lastResponse) {
                    lastResponse.textContent = 'Never responded';
                }
            } catch (error) {
                console.error('Error fetching auto-chat status:', error);
            }
        }

        async function toggleAutoChat(enabled) {
            try {
                const response = await fetch('/api/auto-chat/toggle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ enabled })
                });

                const result = await response.json();
                console.log('Auto-chat toggled:', result);

                // Update stats immediately
                await fetchAutoChatStatus();
            } catch (error) {
                console.error('Error toggling auto-chat:', error);
                // Revert toggle on error
                const toggle = document.getElementById('autoChatToggle');
                if (toggle) {
                    toggle.checked = !enabled;
                }
            }
        }

        // Initialize auto-chat controls
        function initAutoChat() {
            const toggle = document.getElementById('autoChatToggle');
            if (toggle) {
                toggle.addEventListener('change', (e) => {
                    toggleAutoChat(e.target.checked);
                });
            }

            // Fetch initial status
            fetchAutoChatStatus();

            // Update status every 5 seconds
            setInterval(fetchAutoChatStatus, 5000);
        }

