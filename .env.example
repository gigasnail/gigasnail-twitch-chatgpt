# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twitch Configuration
TWITCH_USER=your_bot_username
CHANNELS=channel1,channel2

# Twitch OAuth (for automatic token refresh)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=your_twitch_app_client_secret
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Optional: Set this if you already have a refresh token
# TWITCH_REFRESH_TOKEN=your_refresh_token_here

# Legacy: Manual OAuth token (not recommended for production)
# TWITCH_AUTH=oauth:your_oauth_token_here

# Bot Configuration
GPT_MODE=CHAT
HISTORY_LENGTH=5
MODEL_NAME=gpt-3.5-turbo
COMMAND_NAME=!gpt
SEND_USERNAME=true
ENABLE_TTS=false
ENABLE_CHANNEL_POINTS=false
COOLDOWN_DURATION=10

# Render Configuration (only needed for Render deployment)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Auto-Chat Configuration (bot chimes into conversations)
ENABLE_AUTO_CHAT=true
AUTO_CHAT_COOLDOWN=300
AUTO_CHAT_PROBABILITY=0.15
AUTO_CHAT_MIN_MESSAGES=5

# AFK Mode - Bot keeps chat entertained while streamer is away
ENABLE_AFK_MODE=false
AFK_STORY_INTERVAL=180
AFK_MIN_SILENCE=60

# Streamer Mention Detection - Always respond when streamer is mentioned
ENABLE_STREAMER_MENTION=true
STREAMER_NAMES=gigasnail,giga

# Topic Tracking - Track and join relevant conversation topics
ENABLE_TOPIC_TRACKING=true

# Hype Mode - Amplify hype with chat commands
ENABLE_HYPE_MODE=false
HYPE_COMMANDS=!hype,!riot,!riot2,!chels,!rendan,!holunka,!snailarmy,!riot3

# Emoji React Mode - Bot responds with Twitch emojis when users use emojis
ENABLE_EMOJI_REACT=false
EMOJI_REACT_PROBABILITY=0.15
EMOJI_REACT_COOLDOWN=10

# Master Bot Control - Enable/disable all bot activity (standby mode)
BOT_ENABLED=true
