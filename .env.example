# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twitch Configuration
TWITCH_USER=your_bot_username
CHANNELS=channel1,channel2

# Twitch OAuth (for automatic token refresh)
TWITCH_CLIENT_ID=your_twitch_app_client_id
TWITCH_CLIENT_SECRET=your_twitch_app_client_secret
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Optional: Set this if you already have a refresh token
# TWITCH_REFRESH_TOKEN=your_refresh_token_here

# Legacy: Manual OAuth token (not recommended for production)
# TWITCH_AUTH=oauth:your_oauth_token_here

# Bot Configuration
GPT_MODE=CHAT
HISTORY_LENGTH=5
MODEL_NAME=gpt-3.5-turbo
COMMAND_NAME=!gpt
SEND_USERNAME=true
ENABLE_TTS=false
ENABLE_CHANNEL_POINTS=false
COOLDOWN_DURATION=10

# Render Configuration (only needed for Render deployment)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
